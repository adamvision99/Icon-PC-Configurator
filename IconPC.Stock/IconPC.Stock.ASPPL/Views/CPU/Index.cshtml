@model IEnumerable<IconPC.Stock.ASPPL.Models.CPU>

@{
    ViewBag.Title = "Index";
}

<h2>Список</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfCores)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfThreads)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TurboFrequency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Socket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TDP)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumberOfCores)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumberOfThreads)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TurboFrequency)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Socket.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TDP)
    </td>
    <td>
        @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
